<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.Pruebas.SerieFragment">

    <ImageView
        android:id="@+id/imgSerieCabecera"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sobrenosotros_2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSerieCabecera">

        <TextView
            android:id="@+id/tvSerieNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la serie"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSerieGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genero de la serie"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSerieDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion de la serie"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btnSerieSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:enabled="false"
            android:text="Guardar serie"
            android:textColor="@color/white" />

        <ListView
            android:id="@+id/listaTemporadas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>